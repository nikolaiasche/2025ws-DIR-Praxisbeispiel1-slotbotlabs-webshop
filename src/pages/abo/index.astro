---
import BaseLayout from "../../layouts/BaseLayout.astro";
const title = "Abos – SlotBotBuddy";
const description = "Wähle den passenden Plan für SlotBotBuddy.";
---

<BaseLayout title={title} description={description} showFooter={true}>
  <h1>Abos</h1>
  <p>Wähle den Plan, der am besten zu dir passt.</p>

  <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap:16px; margin-top:16px;">
    <a class="card" href="/abo/standard">
      <h2>Standard</h2>
      <p>4,99 € / Monat</p>
      <p>Für den stressfreien Alltag.</p>
    </a>

    <a class="card" href="/abo/premium">
      <h2>Premium</h2>
      <p>9,99 € / Monat</p>
      <p>Maximale Chance bei knappen Slots.</p>
    </a>
  </div>

  <style>
    .card{
      display:block;
      padding:16px;
      border-radius:16px;
      border:1px solid rgba(255,255,255,0.12);
      background: rgba(255,255,255,0.06);
      text-decoration:none;
    }
    .card:hover{ filter: brightness(1.05); }
    h2{ margin: 0 0 6px 0; }
    p{ margin: 0 0 8px 0; opacity: .9; }
  </style>
</BaseLayout>
