---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { withBase } from "../../utils/utils";
import "../../styles/subscription.css";
const title = "Abos – SlotBotBuddy";
const description = "Wähle den passenden Plan für SlotBotBuddy.";
---

<BaseLayout title={title} description={description} showFooter={true}>
  <h1>Abos</h1>
  <p>Wähle den Plan, der am besten zu dir passt.</p>

  <div class="cards">
    <a class="card" href={withBase("/checkout?plan=standard")}>
      <div class="cardHeader">
        <img
          src={withBase("media/images/product/standard_abo_icon.png")}
          alt=""
          class="planIcon"
          aria-hidden="true"
        />
        <h2>Standard</h2>
      </div>
      <div class="cardBody">
        <p class="price">4,99 € / Monat</p>
        <p>Die Lösung für Morgenmuffel.</p>
      </div>
      <img
        src={withBase("media/images/product/kaufen_icon.png")}
        alt=""
        class="buyIcon"
        aria-hidden="true"
      />
    </a>

    <a class="card" href={withBase("/checkout?plan=premium")}>
      <div class="cardHeader">
        <img
          src={withBase("media/images/product/premium_abo_icon.png")}
          alt=""
          class="planIcon"
          aria-hidden="true"
        />
        <h2>Premium</h2>
      </div>
      <div class="cardBody">
        <p class="price">9,99 € / Monat</p>
        <p>Erhalte den gewünschten Prüfungstermin.</p>
      </div>
      <img
        src={withBase("media/images/product/kaufen_icon.png")}
        alt=""
        class="buyIcon"
        aria-hidden="true"
      />
    </a>
  </div>
  <p>
    Icon made by IconJam from<a
      href="https://www.flaticon.com/"
      target="_blank"
      rel="noopener noreferrer"
    >
      www.flaticon.com
    </a>
  </p>
  <p>
    Icon made by Freepik from<a
      href="https://www.flaticon.com/"
      target="_blank"
      rel="noopener noreferrer"
    >
      www.flaticon.com
    </a>
  </p>
  <p>
    Icon made by Aldo Cervantes from<a
      href="https://www.flaticon.com/"
      target="_blank"
      rel="noopener noreferrer"
    >
      www.flaticon.com
    </a>
  </p>
</BaseLayout>
